{
  "name": "tomkit",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ios": "APP_VARIANT=development expo run:ios",
    "android": "APP_VARIANT=development expo run:android",
    "web": "expo start --web",
    "web:serve": "bunx serve dist --single",
    "test": "jest --watchAll",
    "lint": "bunx @biomejs/biome lint .",
    "lint:fix": "bunx @biomejs/biome lint --write .",
    "format:check": "bunx @biomejs/biome format .",
    "format": "bunx @biomejs/biome format --write .",
    "type:check": "tsc --noEmit",
    "validate": "bun run-p lint format:check type:check",
    "prebuild": "bun expo prebuild",
    "prebuild:clean": "bun prebuild --clean",
    "build:web": "bun validate && bunx expo export -p web",
    "build:preview:android": "bun validate && eas build -e preview -p android",
    "build:preview:ios": "bun validate && eas build -e preview -p ios",
    "build:prod:android": "bun validate && eas build -e production -p android",
    "build:prod:ios": "bun validate && eas build -e production -p ios",
    "submit:prod:android": "eas submit -e production -p android",
    "submit:prod:ios": "eas submit -e production -p ios",
    "doctor": "bunx expo-doctor@latest",
    "doctor:fix": "bunx expo install --check",
    "clean:android": "rm -rf android",
    "clean:ios": "rm -rf ios",
    "clean:expo": "rm -rf .expo",
    "clean:repo": "rm -rf node_modules",
    "clean:all": "bun clean:android && bun clean:ios && bun clean:expo && bun clean:repo",
    "reset-project": "node ./scripts/reset-project.js"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@radix-ui/colors": "^3.0.0",
    "@react-navigation/native": "^6.0.2",
    "expo": "~51.0.28",
    "expo-constants": "~16.0.2",
    "expo-dev-client": "~4.0.23",
    "expo-font": "~12.0.9",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.23",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-web-browser": "~13.0.3",
    "lucide-react-native": "^0.408.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-unistyles": "^2.8.3",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@biomejs/biome": "1.8.3",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "husky": "^9.0.11",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx)": [
      "bunx @biomejs/biome lint --write",
      "bunx @biomejs/biome format --write"
    ],
    "**/*.+(json|md|mdx)": ["bunx @biomejs/biome format --write"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
